[run]
branch = True
source = samantha

[report]
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    # Don't complain if tests don't hit defensive assertion code:
    raise NotImplementedError

show_missing = 1
omit = */tests/*,*/listeners/*,*/responder/*,*/brain/*,*/sender/*,*/response_builder/*
ignore_errors = True

[html]
directory = coverage_html_report

[xml]
output = coverage.xml

